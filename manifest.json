{
  "manifest_version": 2,

  "name": "Anti Ad",
  "description": "Removes ads",
  "version": "1.0",

//  "browser_action": {
//    "default_icon": "icon.png",
//    "default_title": "tommy wrote this",
//    "default_popup": "popup.html"
//  },

  "background": {
    "scripts": [
      "util.js",
      "test_notifications.js",
      "spy_on_my_tabs.js",
      "main_background_script.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "util.js",
        "master_loop.js",
        "anti_addiction.js",
        "anti_ad.js",
        "main_content_script.js"
      ]
    }
  ],

  "permissions": [
//    "https://ajax.googleapis.com/",
//    "<all_urls>",
    "tabs",
    "storage",
    "notifications"
  ]
}
