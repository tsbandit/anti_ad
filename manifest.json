{
  "manifest_version": 2,

  "name": "Anti Ad",
  "description": "Removes ads",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "version": "1.0",

//  "browser_action": {
//    "default_icon": "icon.png",
//    "default_title": "tommy wrote this",
//    "default_popup": "popup.html"
//  },

  "background": {
    "scripts": [
      "util.js",
      "execute_code.js",
      "call_api.js",
      "listen_for_stupid_api_calls.js",
      "test_notifications.js",
      "spy_on_my_tabs.js",
      "main_background_script.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "util.js",
        "call_api_stupidly.js",
        "master_loop.js",
        "anti_addiction.js",
        "anti_ad.js",
        "spy_on_youtube.js",
        "main_content_script.js",
        "intercept_requests.js",
        "rip_bestplaces.js"
      ]
    }
  ],

//  "web_accessible_resources": [
//    {
//      "resources": ["worker.js"],
//      "matches": ["<all_urls>"]
//    }
//  ],

  "permissions": [
//    "https://ajax.googleapis.com/",
